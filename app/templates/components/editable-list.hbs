<div class="input-group">

    {{ input type="text" class="form-control" placeholder=input-placeholder valueBinding="addValue" action="addItem"}}

    <span class="input-group-btn">
            <button class="btn btn-success" type="submit" {{action "addItem"}}>Add</button>
        </span>
    </div>

<hr/>

<div class="list-group">
    {{#each storage as |item|}}

        {{ editable-list-item item=item onClickClear=(action "deleteItem" item) }}

    {{/each}}
</div>